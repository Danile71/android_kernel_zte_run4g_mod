<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginRight="0dip"
  >

   <TextView
    android:id="@+id/ct_text_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="6dip"
    android:textColor="#cc333333"
    android:textSize="12sp"
    android:textStyle="bold"
    android:paddingLeft="3dip"
    android:paddingRight="3dip"
    android:paddingBottom="5dip"
    android:visibility="gone" />

  <LinearLayout
    android:id="@+id/button_with_counter"
    android:orientation="vertical"
    android:layout_gravity="right|bottom"
    android:gravity = "right"
    android:layout_alignParentRight = "true"
    android:layout_weight="1.0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/send_button_mms"
        style="?android:attr/borderlessButtonStyle"
        android:drawableBottom="@drawable/ic_send_holo_light"
        android:drawablePadding="0dip"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="4dip"
        android:editable="false"
        />

    <ImageButton
        android:id="@+id/send_button_sms"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/ic_send_sms"
        android:drawablePadding="0dip"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginLeft="4dip"
        android:layout_gravity="bottom"
        android:visibility="gone"
        />
   </LinearLayout>
</LinearLayout>
