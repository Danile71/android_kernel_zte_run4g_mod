<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ct_encrypt_master_clear_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ct_master_clear_desc"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ct_encrypt_personal_data_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/ct_encrypt_personal_data_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ct_encrypt_personal_data_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="4sp"
            android:text="@string/personal_data_description"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ct_encrypt_install_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="@string/ct_encrypt_install_app_title"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ct_encrypt_media_data_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/ct_encrypt_media_data_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ct_encrypt_media_data_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="4sp"
            android:text="@string/ct_erase_external_storage_description"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>