<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/step2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/stepText"
        android:layout_marginTop="25dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/esurfing_dialing_button_margin"
        android:paddingRight="@dimen/esurfing_dialing_button_margin"
        android:textSize="@dimen/esurfing_dialing_guide_text_size"
        android:text="@string/esurfing_dialing_step2_china_dial_other"
        android:maxLines="7"/>

    <RelativeLayout android:id="@+id/esurfing_country_select"
        android:layout_marginTop="200dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dip"
        android:layout_width="173dip"
        android:layout_height="275dip"
        android:background="@drawable/esurfing_country_select">

        <TextView
            android:id="@+id/search"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="37dip"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_search"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/americas"
            android:layout_below="@id/search"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/country_select_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_americas"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/oceania"
            android:layout_below="@id/americas"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/country_select_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_oceania"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/europe"
            android:layout_below="@id/oceania"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/country_select_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_europe"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/asia"
            android:layout_below="@id/europe"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/country_select_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_asia"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/africa"
            android:layout_below="@id/asia"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/country_select_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_africa"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/egypt"
            android:layout_below="@id/africa"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/esurfing_dialing_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_egypt"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/egypt_code"
            android:layout_below="@id/africa"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/esurfing_dialing_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_egypt_code"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/south_africa"
            android:layout_below="@id/egypt"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/esurfing_dialing_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_south_Africa"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/south_africa_code"
            android:layout_alignParentRight="true"
            android:layout_below="@id/egypt"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/esurfing_dialing_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_south_Africa_code"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/gambia"
            android:layout_below="@id/south_africa"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/esurfing_dialing_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_gambia"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/gambia_code"
            android:layout_below="@id/south_africa"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/country_select_button_pending_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/esurfing_dialing_button_margin"
            android:paddingRight="@dimen/esurfing_dialing_button_margin"
            android:textSize="@dimen/esurfing_dialing_radio_button_text_size"
            android:text="@string/country_select_gambia_code"
            android:singleLine="true"/>
    </RelativeLayout>

    <!-- esurfing dialog layout -->
    <LinearLayout android:id="@+id/esurfing_dialing_dialog"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/esurfing_guide_esurfing_dialog" />
    </LinearLayout>

    <ImageButton android:id="@+id/esurfing_dialing_hand"
        android:layout_below="@id/esurfing_dialing_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-85dip"
        android:layout_marginLeft="80dip"
        android:background="@drawable/esurfing_dialing_hand"/>

    <ImageButton android:id="@+id/esurfing_dialing_hand_second"
        android:layout_below="@id/esurfing_country_select"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-95dip"
        android:layout_marginRight="40dip"
        android:background="@drawable/esurfing_dialing_hand"/>

    <ImageButton android:id="@+id/esurfing_dialing_arrow"
        android:layout_above="@id/guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dip"
        android:background="@drawable/esurfing_dialing_arrow"/>

    <!-- guide icon start-->
    <LinearLayout android:id="@+id/guide_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dip"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="145dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton android:id="@+id/guide_icon_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/esurfing_guide_unselect"/>

        <ImageButton android:id="@+id/guide_icon_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esurfing_dialing_guide_left_margin"
            android:background="@drawable/esurfing_guide_unselect"/>

        <ImageButton android:id="@+id/guide_icon_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esurfing_dialing_guide_left_margin"
            android:background="@drawable/esurfing_guide_selected"/>

        <ImageButton android:id="@+id/guide_icon_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esurfing_dialing_guide_left_margin"
            android:background="@drawable/esurfing_guide_unselect"/>
    </LinearLayout>
    <!-- guide icon end-->

    <Button android:id="@+id/skip_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dip"
        android:layout_marginRight="12dip"
        android:layout_width="80dip"
        android:layout_height="42dip"
        android:text="@string/skip_button_string"
        android:textSize="20dip"
        android:background="@drawable/btn_skip"/>

</RelativeLayout>
