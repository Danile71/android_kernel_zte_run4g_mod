<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ct_master_clear_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ct_master_clear_desc"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/erase_internal_personal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="true"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/personal_data_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="true"
            android:paddingRight="8dp"
            android:enabled="false"
            android:checked="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/personal_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/personal_data_title"
                android:textSize="18sp"
                android:enabled="false"
                android:clickable="false" />

            <TextView
                android:id="@+id/personal_data_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4sp"
                android:text="@string/personal_data_description"
                android:textSize="14sp"
                android:enabled="false"
                android:clickable="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/erase_internal_install_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingTop="12dp" >

        <CheckBox
            android:id="@+id/install_app_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:duplicateParentState="true"
            android:focusable="true"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/install_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/install_app_title"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ct_erase_external_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/ct_erase_external"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:paddingEnd="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ct_erase_external_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/ct_erase_external_storage"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ct_erase_external_storage_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4sp"
                android:text="@string/ct_erase_external_storage_description"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>