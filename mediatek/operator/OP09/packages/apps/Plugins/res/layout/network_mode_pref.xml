<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/slot_color"
    android:background="@drawable/purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:id="@+id/title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/simid_text"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:paddingLeft="60dip"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <CheckBox
            android:id="@+id/sim_check_box"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:paddingRight="18dip" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dip"
        android:text="@string/prefer_network_setting"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@android:drawable/divider_horizontal_dark" />
    <LinearLayout
        android:id="@+id/data_roam_global"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal"
        android:background="@drawable/data_roam_item_pressed" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:paddingLeft="16dip"
            android:text="@string/global_mode"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioButton
            android:id="@+id/data_roam_select_radio_global"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:clickable="false"
            android:focusable="false"
            android:paddingRight="18dip" />
    </LinearLayout>

    <View
        android:id = "@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:drawable/divider_horizontal_dark" />

    <LinearLayout
        android:id="@+id/data_roam_cdma"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal"
        android:background="@drawable/data_roam_item_pressed" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:paddingLeft="16dip"
            android:text="@string/cdma_only"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/data_roam_select_radio_cdma"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:clickable="false"
            android:focusable="false"
            android:paddingRight="18dip" />
    </LinearLayout>

    <View
        android:id = "@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:drawable/divider_horizontal_dark" />

    <LinearLayout
        android:id="@+id/data_roam_gsm"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal"
        android:background="@drawable/data_roam_item_pressed" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:paddingLeft="16dip"
            android:text="@string/gsm_only"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/data_roam_select_radio_gsm"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:clickable="false"
            android:focusable="false"
            android:paddingRight="18dip" />
    </LinearLayout>

</LinearLayout>