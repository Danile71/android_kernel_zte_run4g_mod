<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/alert_dialog_device_image"
        android:layout_width="84dp"
        android:layout_height="93dp"
        android:src="@drawable/image_watch"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/combine_bg_text_layout"
        android:layout_width="84dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/alert_dialog_device_image"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/alert_dialog_device_name_bg"
            android:layout_width="84dp"
            android:layout_height="15dp"
            android:src="@drawable/text_bg" />

        <TextView
            android:id="@+id/alert_dialog_device_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:singleLine="true"
            android:gravity="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/alert_dialog_device_status_text"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/combine_bg_text_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="15sp" />

</RelativeLayout>