<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/range_information_dialog_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/range_information_text"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/range_information_dialog_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/range_information_dialog_text_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/range_information_dialog_check_box_text"
        android:textSize="20sp" />

</RelativeLayout>