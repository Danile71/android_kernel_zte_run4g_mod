<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xcap1"
                android:id="@+id/textView"
                android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/xcap_root"
                android:inputType="text"
                android:layout_gravity="center"/>
</LinearLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xcap2"
                android:id="@+id/textView2"
                android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/xcap_user"
                android:inputType="text"
                android:layout_gravity="center"/>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xcap3"
                android:id="@+id/textView3"
                android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/xcap_passwd"
                android:inputType="text"
                android:layout_gravity="center"/>                
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xcap4"
                android:id="@+id/textView4"
                android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                
                android:maxLines="1"
                android:id="@+id/xcap_authtype"
                android:inputType="text"
                android:layout_gravity="center"/>                  
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sys_get_button"
                android:id="@+id/get_btn"
                android:layout_gravity="left|center_vertical"/>                
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sys_set_button"
                android:id="@+id/set_btn"
                android:layout_gravity="left|center_vertical"/>
                
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sys_test_button"
                android:id="@+id/test_btn"
                android:layout_gravity="left|center_vertical"/>                

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run_gba_button"
                android:id="@+id/run_gba_btn"
                android:layout_gravity="left|center_vertical"/>   
                
</LinearLayout>                
                                
<View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#777777"></View>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    >

    <LinearLayout
            style="@style/entry_layout"
            android:layout_width="fill_parent" >
            <TextView
                style="@style/info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ims_mo_list" />
    </LinearLayout>
    
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#777777"></View>    
    
    <LinearLayout
            style="@style/entry_layout"
            android:layout_width="fill_parent" >
            <TextView
                android:id="@+id/ims_mo_info"
                style="@style/info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>    

<View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#777777"></View>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    >

    <LinearLayout
            style="@style/entry_layout"
            android:layout_width="fill_parent" >
            <TextView
                style="@style/info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ims_gba_list" />
    </LinearLayout>
    
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#777777"></View>    
    
    <LinearLayout
            style="@style/entry_layout"
            android:layout_width="fill_parent" >
            <TextView
                android:id="@+id/ims_gba_info"
                style="@style/info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>    

</LinearLayout>
</ScrollView>
