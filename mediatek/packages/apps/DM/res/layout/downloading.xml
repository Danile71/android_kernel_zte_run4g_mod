<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@+id/buttonsLinearLayout"> 
	<LinearLayout
    	android:layout_width="fill_parent"
			android:layout_height="wrap_content"
    	android:orientation="vertical">
    	<LinearLayout
    	android:layout_width="fill_parent"
		android:layout_height="100dip"
		android:gravity="center"
    	android:orientation="vertical">
			<ProgressBar
				android:id="@+id/progressbarDownload"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="200dip"
				android:layout_height="wrap_content"
				android:max="100"
				android:progress="0"
			/>
			<TextView  
				android:id="@+id/rate"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:text="@string/rate"
			    />
		</LinearLayout>
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
			    android:text="@string/description"/>
		<TextView  
			android:id="@+id/dscrpContentDl"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/dscrpContent"
				android:layout_marginBottom="8dp" 
				android:layout_marginLeft="12dp" 
				android:layout_marginRight="12dp" 
				android:layout_marginTop="8dp"/>
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
			    android:text="@string/newfeatures"/>
		<TextView  
			android:id="@+id/featureNotesDl"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
				android:layout_marginBottom="8dp" 
				android:layout_marginLeft="12dp" 
				android:layout_marginRight="12dp" 
				android:layout_marginTop="8dp"/>
	</LinearLayout>
	</ScrollView>
    <LinearLayout
    	android:id="@+id/buttonsLinearLayout"
    	android:layout_width="fill_parent"
		android:layout_height="60dip"
    	android:gravity="center"
    	android:layout_alignParentBottom="true">
		<Button
			android:id="@+id/buttonSuspend"
			android:layout_height="wrap_content"
			android:text="@string/suspend"
			android:layout_width="132dip" 
			android:layout_marginRight="10dp"/>
		<Button
			android:id="@+id/cancellbutton"
			android:layout_height="wrap_content"
			android:text="@string/cancel"
			android:layout_width="132dip" 
			android:layout_marginLeft="10dp"/>
</LinearLayout>
</RelativeLayout>
