<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_above="@+id/dlButtonLayout">
	<LinearLayout
    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
    	android:orientation="vertical">
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/description"
		/>
		<TextView  
			android:id="@+id/dscrpContent"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/dscrpContent"
				android:layout_marginBottom="8dp" 
				android:layout_marginLeft="12dp" 
				android:layout_marginRight="12dp" 
				android:layout_marginTop="8dp"/>
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/newfeatures"
		/>
		<TextView  
			android:id="@+id/featureNotes"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/featureNotes"
			    android:layout_marginBottom="8dp" 
			    android:layout_marginLeft="12dp" 
			    android:layout_marginRight="12dp" 
			    android:layout_marginTop="8dp"/>
	</LinearLayout>
	</ScrollView>
    <LinearLayout
    	android:id="@+id/dlButtonLayout"
    	android:layout_width="fill_parent"
		android:layout_height="60dip"
    	android:gravity="center" 
    	android:layout_alignParentBottom="true">
		<Button
			android:id="@+id/buttonDl"
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:text="@string/download" 
			android:layout_width="132dip"/>
</LinearLayout>
</RelativeLayout>
