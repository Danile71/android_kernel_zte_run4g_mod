<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/whole_view"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	<FrameLayout 
		android:id="@+id/FrameLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:padding="6dp">
		<RelativeLayout 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:id="@+id/LayoutDownloading" 
			android:visibility="gone">
			<TextView 
				android:text="@+id/TextView01" 
				android:layout_height="wrap_content" 
				android:id="@+id/title" 
				android:layout_width="fill_parent" 
				android:layout_alignParentLeft="true" 
				android:layout_alignParentTop="true">
			</TextView>
			<ImageView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_alignParentLeft="true" 
				android:paddingLeft="2dp" 
				android:id="@+id/downloadingIcon" 
				android:layout_below="@+id/title">
			</ImageView>
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/TextViewName" 
				android:layout_alignTop="@+id/downloadingIcon" 
				android:layout_toRightOf="@+id/downloadingIcon" 
				android:paddingLeft="6dp">
			</TextView>
			<TextView 
				android:text="@+id/TextView01" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/TextViewSize" 
				android:layout_alignParentRight="true" 
				android:layout_alignTop="@+id/TextViewName">
			</TextView>
			<ProgressBar 
				android:layout_height="wrap_content" 
				android:id="@+id/ProgressBarProgress" 
				style="?android:attr/progressBarStyleHorizontal" 
				android:layout_below="@+id/TextViewName" 
				android:layout_width="fill_parent" 
				android:layout_toRightOf="@+id/downloadingIcon" 
				android:paddingLeft="6dp">
			</ProgressBar>
		</RelativeLayout>
		<RelativeLayout 
			android:layout_height="wrap_content" 
			android:id="@+id/LayoutInstalling" 
			android:layout_width="fill_parent">
			<TextView 
				android:text="@+id/TextView01" 
				android:layout_height="wrap_content" 
				android:id="@+id/title" 
				android:layout_alignParentLeft="true" 
				android:layout_alignParentTop="true" 
				android:layout_width="fill_parent">
			</TextView>
			<ImageView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/icon" 
				android:layout_alignParentLeft="true" 
				android:layout_below="@+id/title">
			</ImageView>
			<TextView 
				android:text="@+id/TextView01" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/name" 
				android:layout_toRightOf="@+id/icon" 
				android:layout_alignTop="@+id/icon" 
				android:paddingLeft="6dp">
			</TextView>
			<TextView 
				android:text="@+id/TextView01" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_toRightOf="@+id/icon" 
				android:layout_alignBottom="@+id/icon" 
				android:id="@+id/version" 
				android:paddingLeft="6dp">
			</TextView>
			<ProgressBar 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/progress" 
				android:layout_alignParentRight="true" 
				android:layout_below="@+id/title">
			</ProgressBar>
		</RelativeLayout>
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:id="@+id/LayoutEmpty" 
			android:orientation="vertical" 
			android:gravity="center_vertical">
			<ProgressBar style="?android:attr/progressBarStyleLarge" 
				android:id="@+id/progressLoading"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"  >
			</ProgressBar>
			<TextView android:text="@+id/TextView01" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/TextViewEmpty" 
				android:layout_gravity="center" 
				android:textAppearance="?android:attr/textAppearanceLarge" 
				android:textColor="?android:attr/textColorPrimary">
			</TextView>
		</LinearLayout>
	</FrameLayout>

</LinearLayout>
