<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mediatek.mediatekdm"
    android:sharedUserId="android.uid.system"
    android:versionCode="1"
    android:versionName="1.0" >
    
	<uses-sdk android:minSdkVersion="14" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_WAP_PUSH" />
    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <!-- The following are for lawmo -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_BLUETOOTH_SHARE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MASTER_CLEAR" />
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.REBOOT" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    <!-- for scomo -->
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" />
    <uses-permission android:name="android.permission.CLEAR_APP_USER_DATA" />
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.Holo"
        android:name=".DmApplication">
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:name=".fumo.DmClient"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            >
            <intent-filter >
                <action android:name="com.mediatek.mediatekdm.DMCLIENT" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/updateSuccessTitle"
            android:name=".fumo.DmFumoReport"
            android:taskAffinity="com.mediatek.mediatekdm"
            android:excludeFromRecents="true" 
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter >
                <action android:name="com.mediatek.mediatekdm.UPDATECOMPLETE" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/dm_entry_title"
            android:name=".fumo.DmEntry"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="com.mediatek.mediatekdm">
            <intent-filter >
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:name=".DmNIInteractionActivity"
            android:taskAffinity="com.mediatek.mediatekdm"
            android:excludeFromRecents="true" 
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <!--  dialog activity when Wap push msg received-->     
	    <activity android:name=".CollectSetPermissionDialog"
	            android:excludeFromRecents="true"
	            android:label="@string/app_name"
	            android:launchMode="singleInstance"
	            android:taskAffinity="com.mediatek.mediatekdm"
	            android:configChanges="orientation|keyboardHidden|screenSize|mcc|mnc"
	            android:theme="@*android:style/Theme.Holo.Dialog.Alert">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <action android:name="com.mediatek.mediatekdm.permission.confirm.start" />
	            <category android:name="android.intent.category.DEFAULT" />
	        </intent-filter>
	    </activity> 

        <service android:name=".DmService" >
            <intent-filter >
                <action android:name="com.mediatek.mediatekdm.DMSERVE" />
                <action android:name="com.mediatek.mediatekdm.DMDOWNLOADINGFOREGROUND" />
                <action android:name="android.intent.action.DM_RECEIVED_WAP_PUSH" />
            </intent-filter>
        </service>

        <receiver android:name=".DmReceiver" >
            <intent-filter >
                <!-- DM_WAP_PUSH received -->
                <action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED" />
                <data android:mimeType="application/vnd.syncml.dm+wbxml" />
                <data android:mimeType="application/vnd.syncml.notification" />
            </intent-filter>
            <intent-filter >
                <!-- Update reminder -->
                <action android:name="com.mediatek.mediatekdm.REMINDER" />
            </intent-filter>
            <intent-filter >
                <!-- System update service entry -->
                <action android:name="com.mediatek.DMSWUPDATE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter >
                <action android:name="android.intent.action.SIM_INDICATOR_STATE_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mediatek.mediatedm.andsf.REQUEST" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mediatek.mediatekdm.smsreg.new" />
            </intent-filter>

           <!-- WiFi Hotspot 2.0 -->
           <intent-filter> 
               <action android:name="com.mediatek.dm.provision.start"/>                       
               <action android:name="com.mediatek.dm.remediation.start"/>                        
               <action android:name="com.mediatek.dm.policy.start"/>                        
               <action android:name="com.mediatek.passpoint.browser.redirect.dm"/>                        
               <action android:name="com.mediatek.passpoint.browser.remredirect.dm"/>                   
               <action android:name="com.mediatek.dm.certificateenrollment.done"/>    
               <action android:name="com.mediatek.dm.certificatereenrollment.done"/>  
               <action android:name="com.mediatek.dm.negotiate.done"/>        
               <action android:name="com.mediatek.dm.getaaaservertrustroot.done"/> 
               <action android:name="com.mediatek.soap.provision.start"/>
               <action android:name="com.mediatek.soap.remediation.start"/>
               <action android:name="com.mediatek.soap.policy.start"/>
               <action android:name="com.mediatek.soap.sim.provision.start"/>
               <action android:name="com.mediatek.dm.wifitree.start"/>         
           </intent-filter>
           <!-- WiFi Hotspot 2.0 -->
        </receiver>

        <activity android:name=".scomo.DmScomoActivity" 
            android:excludeFromRecents="true">
        </activity>
        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:name=".scomo.DmScomoDownloadDetailActivity"
            android:label="@string/scomo_activity_title"
            >
        </activity>
        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:name=".scomo.DmScomoConfirmActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" 
            android:taskAffinity="">
        </activity>

        <provider 
            android:name=".DmContentProvider"
            android:authorities="com.mediatek.providers.mediatekdm"
            android:exported="true">            
        </provider>
    </application>

    


</manifest>
