<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_menu_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/menu_key_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_floating_menu_mark" />

    <LinearLayout
        android:id="@+id/menu_key_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.mediatek.floatmenu.KeyButtonView
            android:id="@+id/menu_key_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_floating_menu_back" />

        <Space
            android:layout_width="2dp"
            android:layout_height="wrap_content" />

        <com.mediatek.floatmenu.KeyButtonView
            android:id="@+id/menu_key_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_floating_menu_home" />
    </LinearLayout>

</LinearLayout>